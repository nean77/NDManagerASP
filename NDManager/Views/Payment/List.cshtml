@model IEnumerable<NDManager.Data.Models.Payment>

@{
    ViewData["Title"] = "Lista płatności";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista płatności</h1>
@Html.AntiForgeryToken()
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kid.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kid.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Kid.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kid.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="GeneratePdf" asp-route-id="@item.Id">Generuj wydruk</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (@ViewBag.GroupId != -1)
{
    <a class="btn btn-success float-right" asp-action="GenerateGroupPdf" asp-route-id="@ViewBag.GroupId">Generuj wydruki dla wszystkich</a>
}
else
{
    <button class="btn btn-success float-right" disabled="disabled">Generuj wydruki dla wszystkich</button>
}
