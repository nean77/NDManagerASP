@using NDManager.Data.Models
@model NDManager.Data.Models.Group
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Group", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Teacher, new { @class = "control-label" })
        <select asp-for="TeacherId" class="form-control">
            @foreach (Teacher t in ViewBag.Teachers)
            {
                @if (t.Id == Model.TeacherId)
                {
                    <option value="@t.Id" selected="selected">@t.ToString()</option>
                }
                else
                {
                    <option value="@t.Id">@t.ToString()</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.IsActive, new { @class = "control-label" })
        @Html.EditorFor(m => m.IsActive, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
        <input type="reset" value="Wyczyść" class="btn btn-warning" />
    </div>
}

