@using NDManager.Data.Models
@model NDManager.Data.Models.Teacher
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Teacher", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Id, new { @class = "control-label" })
        <input asp-for="Id" class = "form-control" readonly="readonly"/>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, new { @class = "control-label" })
        @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.LastName, new { @class = "control-label" })
        @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
        <input type="reset" value="Wyczyść" class="btn btn-info" />
    </div>
}

