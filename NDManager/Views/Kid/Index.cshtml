@using System.Linq
@using NDManager.Data.Models
@model NDManager.Data.Models.Group
@{
    ViewData["Title"] = "Dzieci";
}
<h1 class="mt-4">Dzieci</h1>

<div class="row row-cols-md-3">
    <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header"><h3 class="text-center font-weight-light my-4">Wybierz grupę dzieci</h3></div>
        <div class="card-body">
            @using (@Html.BeginForm("List", "Kid", FormMethod.Get))
            {
            <div class="form-floating mb-3">
                @Html.DropDownListFor(model => model.Id, (SelectList)ViewBag.Groups, htmlAttributes: new { @class = "form-control" })
                <label>Wybierz grupę</label>
            </div>
                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                    <input type="submit" value="Wyświetl listę dzieci" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
</div>
