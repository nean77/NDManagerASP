@using NDManager.Data.Models
@model NDManager.Data.Models.Kid
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Kid", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, new { @class = "control-label" })
        @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.LastName, new { @class = "control-label" })
        @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.AttendanceDailyRate, new { @class = "control-label" })
        @Html.EditorFor(m => m.AttendanceDailyRate, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MealDailyRate, new { @class = "control-label" })
        @Html.EditorFor(m => m.MealDailyRate, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Group, new { @class = "control-label" })
        <select asp-for="GroupId" class="form-control">
            @foreach (Group g in ViewBag.Groups)
            {
                @if (g.Id == Model.GroupId)
                {
                    <option value="@g.Id" selected="selected">@g.ToString()</option>
                }
                else
                {
                    <option value="@g.Id">@g.ToString()</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
        <input type="reset" value="Wyczyść" class="btn btn-warning" />
    </div>
}